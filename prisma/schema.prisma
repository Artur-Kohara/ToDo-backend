generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Cria modelo de estrutura das tarefas no banco de dados
model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  completed   String
  createdAt   DateTime @default(now())
}
